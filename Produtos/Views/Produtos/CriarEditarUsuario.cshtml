@model ProdutoDomain.Entidades.Usuario
<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<h3 class="d-flex align-items-center justify-content-between">
	@(Model.Id == 0 ? "Cadastrar Usuário" : "Editar Usuário")
	<a class="btn btn-outline-light" href="@Url.Action("Usuarios", "Produtos")"><i class="bi bi-arrow-left-short"></i> Voltar</a>
</h3>
<form method="post" action="@Url.Action("SalvarUsuario", "Produtos")" >
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="nome" id="nome" type="text" value="@Model.nome" required>
		<label for="nome">Nome</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="email" id="email" type="text" value="@Model.email" required>
		<label for="email">Email</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="senha" id="senha" type="password" value="@Model.senha" required>
		<div id="senha" class="form-text">
			Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
		</div>
		<label for="senha">Senha</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" id="senha2" type="password" required>
		<label for="senha2">Repita a senha</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="cpf" id="cpf" type="text" value="@Model.cpf">
		<label for="cpf">CPF</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="cep" id="cep" type="text" value="@Model.cep">
		<label for="cep">CEP</label>
	</div>
	<div class="mb-3 text-end">
		<input type="hidden" name="Id" value="@Model.Id">
		<button type="submit" class="btn btn-success">@(Model.Id == 0 ? "Salvar" : "Salvar Alterações")</button>
	</div>
</form>