@{
	Layout = null;
}
<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Produtos.styles.css" asp-append-version="true" />
</head>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="">InfraGestão</a>
		</div>
	</nav>
</header>

<h3 class="d-flex align-items-center justify-content-between m-4">
	Recuperar Senha
	<a class="btn btn-outline-light" href="@Url.Action("Login", "Produtos")"><i class="bi bi-arrow-left-short"></i> Voltar</a>
</h3>

<form method="post" action="@Url.Action("VerificaUsuario", "Produtos")">
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" name="email" id="email" type="text" required>
		<label for="email">Email</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" type="text" id="cpf" name="cpf" required>
		<label for="cpf">CPF</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
	<input class="form-control form-control-sm" name="senha" id="senha" type="password" required>
	<label for="senha">Senha</label>
	</div>
	<div class="form-floating col-sm-7 mb-3 align-content-center mx-auto">
		<input class="form-control form-control-sm" type="password" id="senha2" name="senha2" required>
		<label for="senha">Confirme a Senha</label>
	</div>
	<div class=" text-end" style="margin-right:21%">
		<button type="submit" class="btn btn-success"> Salvar</button>
	</div>
</form>